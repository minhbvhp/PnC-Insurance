<UserControl x:Class="PnC_Insurance.View.CustomerInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PnC_Insurance.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Foreground="Teal" FontSize="15"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="2" Margin="15 0">
            <TextBox Width="380" HorizontalAlignment="Left" Margin="15" Text="{Binding CustomerSearch, UpdateSourceTrigger=PropertyChanged}">
                <materialDesign:HintAssist.Hint>
                    <TextBlock>
                        <materialDesign:PackIcon Kind="Search" VerticalAlignment="Bottom"/>
                        <Run Text="Tìm kiếm"/>
                    </TextBlock>
                </materialDesign:HintAssist.Hint>
            </TextBox>

            <DataGrid ItemsSource="{Binding ListOfCustomers, IsAsync=True}"
                      SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged}"
                      AutoGenerateColumns="False" SelectionUnit="Cell"
                      VerticalAlignment="Top" SelectionMode="Single"
                      IsReadOnly="True" HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding TaxCode}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="MST"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Name}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Tên Công ty"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Address}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Địa chỉ"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Business}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Ngành nghề"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Người đại diện:" Margin="0 0 0 5"/>

            <DataGrid ItemsSource="{Binding ListOfRepresentatives, IsAsync=True}"
                      AutoGenerateColumns="False" SelectionUnit="Cell"
                      VerticalAlignment="Top" SelectionMode="Single"
                      IsReadOnly="True" HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding FullName}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Họ tên"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Position}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Chức vụ"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Địa điểm được bảo hiểm:" Margin="0 0 0 5"/>

            <DataGrid ItemsSource="{Binding MatchInsuredLocations, IsAsync=True}"
                      AutoGenerateColumns="False" SelectionUnit="Cell"
                      VerticalAlignment="Top" SelectionMode="Single"
                      IsReadOnly="True" HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Location}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Địa chỉ"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="White" BorderThickness="0 0 0 0.7" Margin="20"/>

        <StackPanel Grid.Row="2" Margin="10 0 20 0">
            <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      ItemsSource="{Binding ListOfInsuredLocations, IsAsync=True}"
                      SelectedItem="{Binding SelectedInsuredLocation, UpdateSourceTrigger=PropertyChanged}"
                      DisplayMemberPath="Location" IsEditable="True"
                      materialDesign:HintAssist.Hint="Lựa chọn địa điểm được bảo hiểm"
                      Margin="20 0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2">
            <TextBlock Text="Khách hàng:" Margin="0 0 0 5"/>

            <DataGrid ItemsSource="{Binding MatchCustomers, IsAsync=True}"
                      AutoGenerateColumns="False" SelectionUnit="Cell"
                      MaxHeight="130" VerticalAlignment="Top" SelectionMode="Single"
                      IsReadOnly="True" HeadersVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding TaxCode}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="MST"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Name}">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Tên Công ty"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
