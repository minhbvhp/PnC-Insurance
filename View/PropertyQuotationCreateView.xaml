                                                    Content="Chọn"/>
                                        </StackPanel>
                                    </materialDesign:DialogHost.DialogContent>

                                    <StackPanel Margin="10" HorizontalAlignment="Stretch">
                                        <Grid Margin="0 0 0 20">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Lựa chọn Đồng bảo hiểm:" Margin="0 0 30 0" VerticalAlignment="Center"/>

                                                <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                                        Background="#94AF9F" Width="50"
                                        Command="{Binding FetchCoInsurersCommand}"
                                        Content="..." />
                                            </StackPanel>

                                            <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                                    Background="#94AF9F" HorizontalAlignment="Right"
                                    Command="{Binding RemoveChosenCoInsurerCommand}">
                                                <materialDesign:PackIcon Kind="RemoveCircle"/>
                                            </Button>
                                        </Grid>

                                        <AdornerDecorator>
                                            <DataGrid ItemsSource="{Binding ListOfChosenCoInsurers, IsAsync=True, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectedItem="{Binding ChosenCoInsurer, UpdateSourceTrigger=PropertyChanged}"
                                                      AutoGenerateColumns="False" SelectionMode="Single" FontSize="12"
                                                      IsReadOnly="True" HeadersVisibility="All" Height="125"
                                                      EnableRowVirtualization="False"  Padding="10 0"
                                                      materialDesign:DataGridAssist.CellPadding="5"
                                                      materialDesign:DataGridAssist.ColumnHeaderPadding="5">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="STT">
                                                        <DataGridTextColumn.Binding>
                                                            <MultiBinding Converter="{StaticResource NumerRow}" UpdateSourceTrigger="PropertyChanged">
                                                                <Binding Mode="OneWay" RelativeSource="{RelativeSource AncestorType={x:Type DataGridRow}}"/>
                                                                <Binding Mode="OneWay" RelativeSource="{RelativeSource AncestorType={x:Type DataGrid}}" Path="Items.Count"/>
                                                            </MultiBinding>
                                                        </DataGridTextColumn.Binding>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn Binding="{Binding CoInsurer.Name}" Width="*" Header="Công ty Đồng bảo hiểm"/>

                                                    <DataGridTextColumn Binding="{Binding Rate}" Width="*" Header="Tỉ lệ đồng"/>

                                                    <DataGridTextColumn Binding="{Binding Fee}" Width="*" Header="Phí quản lý"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </AdornerDecorator>

                                    </StackPanel>
                                </materialDesign:DialogHost>
                            </Grid>
                        </StackPanel>
                    </AdornerDecorator>
                </Expander>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20"
                Style="{StaticResource MaterialDesignFloatingActionDarkButton}" 
                Command="{Binding AddNewPropertyQuotationCommand}"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.IsIndeterminate="{Binding AddNewPropertyQuotationCommand.IsRunning}">
                <materialDesign:PackIcon Kind="Add"/>
            </Button>

            <materialDesign:Snackbar Margin="0 0 0 35"
                                 Background="Black" Foreground="White"
                                 MessageQueue="{Binding ResultNotification}" VerticalAlignment="Bottom"/>
        </Grid>
        

        
    </Grid>
</UserControl>
