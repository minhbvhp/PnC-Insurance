<UserControl x:Class="PnC_Insurance.View.PropertyQuotationCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PnC_Insurance.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Foreground="Teal" FontSize="15"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN BẮT BUỘC" FontSize="20" Foreground="#1A5F7A" HorizontalAlignment="Center"
                       FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                          Direction="330"
                                          Color="Black"
                                          Opacity="0.3"
                                          BlurRadius="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <materialDesign:DialogHost Grid.Column="0">
                    <materialDesign:DialogHost.DialogContent>
                        <StackPanel Height="280" Width="450" Margin="10 0" 
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBox Width="380" HorizontalAlignment="Left" Margin="0 0 0 15"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding CustomerSearch, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:TextFieldAssist.HasClearButton="True">
                                <materialDesign:HintAssist.Hint>
                                    <TextBlock>
                                        <materialDesign:PackIcon Kind="Search" VerticalAlignment="Bottom"/>
                                        <Run Text="Tìm kiếm khách hàng"/>
                                    </TextBlock>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <DataGrid ItemsSource="{Binding ListOfCustomers, IsAsync=True}"
                                      SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      AutoGenerateColumns="False" SelectionMode="Single"
                                      IsReadOnly="True" HeadersVisibility="All" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding TaxCode}" Header="MST"/>

                                    <DataGridTextColumn Binding="{Binding Name}" Header="Tên Khách hàng"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                    Background="#94AF9F" Width="80" Height="40" Margin="0 15"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    Content="Chọn"/>
                        </StackPanel>
                    </materialDesign:DialogHost.DialogContent>

                    <StackPanel Margin="10" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                            <TextBlock Text="Lựa chọn khách hàng:" Margin="0 0 30 0" VerticalAlignment="Center"/>

                            <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    Background="#94AF9F" Width="50"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    Content="..." />
                        </StackPanel>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Mã số thuế" FontSize="14"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding SelectedCustomer.TaxCode, Mode=OneWay}"/>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Tên Khách hàng"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding SelectedCustomer.Name, Mode=OneWay}"/>
                    </StackPanel>
                    
                </materialDesign:DialogHost>

                <materialDesign:DialogHost Grid.Column="1">
                    <materialDesign:DialogHost.DialogContent>
                        <Grid Height="200" Width="200" Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <StackPanel VerticalAlignment="Center">
                                <materialDesign:PackIcon HorizontalAlignment="Center" Margin="0 5"
                                                             Kind="Warning" Height="40" Width="40" Foreground="OrangeRed"/>

                                <TextBlock HorizontalAlignment="Center" 
                                               TextWrapping="Wrap" TextAlignment="Justify" Foreground="OrangeRed">
                                        <Run Text="Toàn bộ"/>
                                        <Run FontWeight="Bold" Text="Dữ liệu liên quan"/>
                                        <Run Text="tới Phòng này cũng sẽ bị ảnh hưởng. Hãy cẩn thận!"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontWeight="Bold" FontSize="14"
                                           Text="Chắc chắn xóa chứ ?"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Width="60" IsTabStop="False"
                                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                                            Background="OrangeRed" Foreground="White" Content="Xóa"
                                            Command="{Binding DeleteDepartmentCommand}"/>

                                <Button Grid.Column="1" Width="80" IsTabStop="False"
                                            Background="#424242" Foreground="White"
                                            Style="{StaticResource MaterialDesignRaisedLightButton}" Content="Giữ"
                                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" IsCancel="True"/>
                            </Grid>
                        </Grid>
                    </materialDesign:DialogHost.DialogContent>

                    <StackPanel Margin="10" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                            <TextBlock Text="Lựa chọn khách hàng:" Margin="0 0 30 0" VerticalAlignment="Center"/>

                            <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    Background="#94AF9F" Width="50"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    Content="..." />
                        </StackPanel>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Mã số thuế" FontSize="14"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding SelectedCustomer.TaxCode, Mode=OneWay}"/>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Tên Khách hàng"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding SelectedCustomer.Name, Mode=OneWay}"/>
                    </StackPanel>
                </materialDesign:DialogHost>
            </Grid>
        </Grid>



        <Button Grid.ColumnSpan="2" Grid.Row="1" FontSize="18"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30 10"
                Style="{StaticResource MaterialDesignFloatingActionDarkButton}" 
                Command="{Binding AddNewCustomerCommand}"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.IsIndeterminate="{Binding AddNewCustomerCommand.IsRunning}">
            <materialDesign:PackIcon Kind="Add"/>
        </Button>

        <materialDesign:Snackbar Grid.ColumnSpan="2" Grid.Row="1" 
                                 Background="Black" Foreground="White" 
                                 HorizontalAlignment="Center"
                                 MessageQueue="{Binding ResultNotification}"/>
    </Grid>
</UserControl>
