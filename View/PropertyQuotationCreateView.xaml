<UserControl x:Class="PnC_Insurance.View.PropertyQuotationCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PnC_Insurance.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Foreground="Teal" FontSize="15"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN BẮT BUỘC" FontSize="20" Foreground="#1A5F7A" HorizontalAlignment="Center"
                       FontWeight="Bold" FontFamily="{StaticResource MaterialDesignFont}">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                          Direction="330"
                                          Color="Black"
                                          Opacity="0.3"
                                          BlurRadius="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <materialDesign:DialogHost Grid.Column="0" IsOpen="{Binding IsChoosingCustomerDialogOpen}">
                    <materialDesign:DialogHost.DialogContent>
                        <StackPanel Height="280" Width="450" Margin="10 0" 
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBox Width="380" HorizontalAlignment="Left" Margin="0 0 0 15"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding CustomerSearch, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:TextFieldAssist.HasClearButton="True">
                                <materialDesign:HintAssist.Hint>
                                    <TextBlock>
                                        <materialDesign:PackIcon Kind="Search" VerticalAlignment="Bottom"/>
                                        <Run Text="Tìm kiếm khách hàng"/>
                                    </TextBlock>
                                </materialDesign:HintAssist.Hint>
                            </TextBox>

                            <DataGrid ItemsSource="{Binding ListOfCustomers, IsAsync=True}"
                                      SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      AutoGenerateColumns="False" SelectionMode="Single"
                                      IsReadOnly="True" HeadersVisibility="All" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding TaxCode}" Header="MST"/>

                                    <DataGridTextColumn Binding="{Binding Name}" Header="Tên Khách hàng"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                    Background="#94AF9F" Width="80" Height="40" Margin="0 15"
                                    Command="{Binding ChooseCustomerCommand}"
                                    Content="Chọn"/>
                        </StackPanel>
                    </materialDesign:DialogHost.DialogContent>

                    <StackPanel Margin="10" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                            <TextBlock Text="Lựa chọn khách hàng:" Margin="0 0 30 0" VerticalAlignment="Center"/>

                            <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    Background="#94AF9F" Width="50"
                                    Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                    Content="..." />
                        </StackPanel>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Mã số thuế" FontSize="14"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding ChosenCustomer.TaxCode, Mode=OneWay}"/>

                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"                             
                             IsReadOnly="True" TextWrapping="Wrap" Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Tên Khách hàng"
                             materialDesign:HintAssist.Background="#CAD2C5"
                             Text="{Binding ChosenCustomer.Name, Mode=OneWay}"/>
                    </StackPanel>
                    
                </materialDesign:DialogHost>

                <materialDesign:DialogHost Grid.Column="1" IsOpen="{Binding IsChoosingLocationDialogOpen}">
                    <materialDesign:DialogHost.DialogContent>
                        <StackPanel Height="220" Width="450" Margin="10" 
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <DataGrid ItemsSource="{Binding ListOfMatchLocations, IsAsync=True}"
                                      SelectedItem="{Binding SelectedLocation, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      AutoGenerateColumns="False" SelectionMode="Single"
                                      IsReadOnly="True" HeadersVisibility="All" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Location}" Header="Địa điểm"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                                    Background="#94AF9F" Width="80" Height="40" Margin="0 15"
                                    Command="{Binding ChooseLocationCommand}"
                                    Content="Chọn"/>
                        </StackPanel>
                    </materialDesign:DialogHost.DialogContent>

                    <StackPanel Margin="10" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                            <TextBlock Text="Lựa chọn địa điểm:" Margin="0 0 30 0" VerticalAlignment="Center"/>

                            <Button Style="{StaticResource MaterialDesignFlatDarkButton}"
                                    Background="#94AF9F" Width="50"
                                    Command="{Binding FetchMatchLocationsCommand}"
                                    Content="..." />
                        </StackPanel>

                        <DataGrid x:Name="ListOfChosenLocationDataGrid" ItemsSource="{Binding ListOfChosenLocation, IsAsync=True}"
                                  SelectedItem="{Binding ChosenLocation, UpdateSourceTrigger=PropertyChanged}"
                                  AutoGenerateColumns="False" SelectionMode="Single"
                                  IsReadOnly="True" HeadersVisibility="All" Height="150" Padding="10 0"
                                  LoadingRow="ListOfChosenLocationDataGrid_LoadingRow">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Location}" Header="Địa điểm trên bản chào"/>
                            </DataGrid.Columns>

                            <DataGrid.RowHeaderTemplate>
                                <DataTemplate>
                                    <Label Width="20" HorizontalContentAlignment="Center" 
                                           Foreground="{DynamicResource txtColor}"
                                           Content="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"/>
                                </DataTemplate>
                            </DataGrid.RowHeaderTemplate>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:DialogHost>
            </Grid>
        </Grid>

        <Button Grid.ColumnSpan="2" Grid.Row="1" FontSize="18"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="30 10"
                Style="{StaticResource MaterialDesignFloatingActionDarkButton}" 
                Command="{Binding AddNewCustomerCommand}"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.IsIndeterminate="{Binding AddNewCustomerCommand.IsRunning}">
            <materialDesign:PackIcon Kind="Add"/>
        </Button>

        <materialDesign:Snackbar Grid.ColumnSpan="2" Grid.Row="1" 
                                 Background="Black" Foreground="White" 
                                 HorizontalAlignment="Center"
                                 MessageQueue="{Binding ResultNotification}"/>
    </Grid>
</UserControl>
